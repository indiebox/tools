developer="http://indiecomputing.com/"
url="http://ubos.net/"
maintainer=$developer
pkgname=$(basename $(pwd))
pkgver=0.3
pkgrel=2
pkgdesc="Miscellanous tools that have turned out to be somewhat useful"
arch=('any')
license=('GPL')
depends=('perl')
options=('!strip')

package() {
# Code
    mkdir -p $pkgdir/usr/bin
    install -m755 $startdir/git-360 $pkgdir/usr/bin/
    install -m755 $startdir/git-360-do $pkgdir/usr/bin/
    install -m755 $startdir/git-commits-since $pkgdir/usr/bin/
}
