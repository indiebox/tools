developer=https://aws.amazon.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.1.9
pkgrel=1
pkgdesc='Amazon S3 Transfer Manager for Python'
arch=('any')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/boto/s3transfer/archive/${pkgver}.tar.gz")
depends=('python')
makedepends=('python-setuptools')
license=('Apache')
sha512sums=('5716be8d42b1b38dd7a10535e02dd1e011c6accc9d9348f9ab2ddca63da77f67e1b689fedd376e3a0c0785dcd3b7f4982ebf90351d6a6f4238c7f4f8ad9b2bf3')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python setup.py install --root="${pkgdir}"

  install -Dpm644 'README.rst' -t "${pkgdir}/usr/share/doc/${pkgname}/"
  install -Dpm644 'LICENSE.txt' "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
