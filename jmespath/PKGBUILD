developer=https://aws.amazon.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.9.3
pkgrel=3
pkgdesc='A query language for JSON'
arch=('any')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/jmespath/jmespath.py/archive/${pkgver}.tar.gz")
releasepage=('https://github.com/jmespath/jmespath.py/releases')
depends=('python')
makedepends=('python-setuptools')
license=("custom:${pkgname}")
sha512sums=('3ca646337e96d3defef45d89f48dbbaa2739a6a18a926b6cf37222bf6db8e6838d0a183fbfb5d4e31be02f9e0de495024b1dba8a69cec995a5285209486c870f')

package() {
  cd "${srcdir}/${pkgname}.py-${pkgver}"

  python setup.py install --root="${pkgdir}"

  install -Dpm644 'README.rst' -t "${pkgdir}/usr/share/doc/${pkgname}/"
  install -Dpm644 'LICENSE.txt' "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
